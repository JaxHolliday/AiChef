<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        @*adding recipestate to whole app for access,
        it is a global variable that can be acessed by all with it being parent and all within a child *@
        <RecipeState>
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(TopNavLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </RecipeState>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(TopNavLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
